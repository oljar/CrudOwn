<Window x:Class="CrudOwn.Widok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mw="clr-namespace:CrudOwn.ModelWidoku"
        xmlns:local="clr-namespace:CrudOwn"
        mc:Ignorable="d"
        x:Name="MainWindow1" Height="450" Width="800"
        x:Uid="Main">
    <Window.DataContext>
        <mw:edycjaElementOne/>
    </Window.DataContext>
    <Grid>
        <TextBox />
        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="554,165,0,0" VerticalAlignment="Top" Command="{Binding Dodaj}" RenderTransformOrigin="0.5,0.5" Width="47">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.492"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox HorizontalAlignment="Left" Margin="523,116,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="164" Height="41" Text="{Binding name}"/>
        <TextBlock HorizontalAlignment="Left" Margin="251,0,0,0" VerticalAlignment="Center" Height="413" Width="210"  Text="{Binding zawartośćListy }"/>
        <Button Content="Odejmij" HorizontalAlignment="Left" Margin="560,202,0,0" VerticalAlignment="Top" Command="{Binding Odejmij}" RenderTransformOrigin="0.523,0.597"/>
        <ComboBox HorizontalAlignment="Left" Margin="88,135,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding mojaLista}" SelectedItem="{Binding selectedItem, Mode=TwoWay}"/>
        <Button Content="Edytuj" HorizontalAlignment="Left" Margin="560,250,0,0" VerticalAlignment="Top" Command="{Binding Edytuj}" RenderTransformOrigin="0.494,0.563" Width="46"/>
        <Button Content="zapisz" HorizontalAlignment="Left" Margin="88,331,0,0" VerticalAlignment="Top" Command="{Binding Zapisz}" RenderTransformOrigin="0.499,0.543" Width="50"/>
        <Button Content="Odczytaj" HorizontalAlignment="Left" Margin="88,356,0,0" VerticalAlignment="Top" Command="{Binding Odczytaj}"/>
        <Button Content="Otworz Okno" HorizontalAlignment="Left" Margin="687,376,0,0" VerticalAlignment="Top" Command="{Binding Otworz}" />
        <Button Content="Zamknij Okno" HorizontalAlignment="Left" Margin="538,386,0,0" VerticalAlignment="Top" Command="{Binding Zamknij}"  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />


    </Grid>
</Window>
